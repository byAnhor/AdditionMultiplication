<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.byanhor.romane.tabledadditions.TableDesX">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorBackground"
        android:gravity="center_horizontal|fill">

        <TableLayout
            android:id="@+id/calculArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="50dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewPremierChiffre"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:clickable="false"
                    android:text=" "
                    android:textAlignment="center"
                    android:textColor="@color/colorChiffres" />

                <TextView
                    android:id="@+id/textViewSigne"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:clickable="false"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@color/colorSigne" />

                <TextView
                    android:id="@+id/textViewDeuxiemeChiffre"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:clickable="false"
                    android:text=" "
                    android:textAlignment="center"
                    android:textColor="@color/colorChiffres" />

                <TextView
                    android:id="@+id/textViewEgal"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:clickable="false"
                    android:text="="
                    android:textAlignment="center"
                    android:textColor="@color/colorSigne" />

                <TextView
                    android:id="@+id/textViewResultatDizaine"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/colorInconnu"
                    android:clickable="false"
                    android:text=" "
                    android:textAlignment="center"
                    android:textColor="@color/colorChiffres" />

                <TextView
                    android:id="@+id/textViewResultatUnite"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/colorInconnu"
                    android:clickable="false"
                    android:text=" "
                    android:textAlignment="center"
                    android:textColor="@color/colorChiffres" />
            </TableRow>


        </TableLayout>

        <LinearLayout
            android:id="@+id/imageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calculArea"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignTop="@id/calculArea"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:baselineAlignBottom="false"
                android:paddingTop="0dp"
                android:visibility="visible"
                app:srcCompat="@mipmap/waiting" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/paveLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:text="0"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="56sp"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="159dp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:text="1"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="56sp"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="159dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:text="2"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="56sp"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="159dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:text="3"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="56sp"
                    tools:layout_editor_absoluteX="154dp"
                    tools:layout_editor_absoluteY="159dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:text="4"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="56sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="159dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:text="5"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="56sp"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="159dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:text="6"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="56sp"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="159dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:text="7"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="56sp"
                    tools:layout_editor_absoluteX="248dp"
                    tools:layout_editor_absoluteY="159dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:text="8"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="56sp"
                    tools:layout_editor_absoluteX="154dp"
                    tools:layout_editor_absoluteY="159dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:text="9"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="56sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="159dp" />

            </TableRow>


        </TableLayout>

        <LinearLayout
            android:id="@+id/debugLayout"
            android:layout_width="match_parent"
            android:layout_height="24sp"
            android:layout_above="@+id/paveLayout"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDebug"
                android:layout_width="match_parent"
                android:layout_height="24sp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
